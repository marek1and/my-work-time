<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.CreatePanel">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:padding="5dp"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/tv_starttime_label"
                android:text="@string/start_time"
                android:paddingRight="25dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_startdate_val"
                android:clickable="true"
                android:paddingRight="5dp"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/tv_starttime_val"
                android:clickable="true"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </TableRow>

        <TableRow
            android:padding="5dp"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/tv_endtime_label"
                android:text="@string/end_time"
                android:paddingRight="25dp"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_enddate_val"
                android:clickable="true"
                android:paddingRight="5dp"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/tv_endtime_val"
                android:clickable="true"
                android:paddingLeft="5dp"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>

        </TableRow>

    </TableLayout>

</LinearLayout>