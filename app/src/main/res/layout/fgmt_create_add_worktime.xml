<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/createPanelBackgroundColor"
    android:theme="@style/AppTheme.CreatePanel">

        <TextView
            android:id="@+id/tv_create_event"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj czas pracy"
            android:textSize="20sp"
            android:textStyle="bold"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:padding="5dp"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/tv_starttime_label"
                android:text="@string/start_time"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/tv_startdate_val"
                android:clickable="true"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/tv_starttime_val"
                android:clickable="true"
                android:paddingRight="5dp" />

        </TableRow>

        <TableRow
            android:padding="5dp"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/tv_endtime_label"
                android:text="@string/end_time"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/tv_enddate_val"
                android:clickable="true"
                android:paddingRight="5dp" />

            <TextView
                android:id="@+id/tv_endtime_val"
                android:clickable="true"
                android:paddingRight="5dp" />

        </TableRow>

    </TableLayout>

</LinearLayout>